<%= form_with model: @driver, class: 'create-driver' do |f| %>
  <p>Please provide the following information to edit your driver in our database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :vin %>
  <%= f.text_field :vin %>

  <%= f.label :available %>
  <%= f.select :available, [true,false] %>

  <%= f.submit "#{action_name} Driver", class: "driver-button" %>
<% end %>