<div class="container">

<h1>Info for Trip #<%= @trip.id %></h1>

<div class="info">
  <ul>
  <li>Trip ID: <%= @trip.id %> </li> 
  <li>Date: <%= @trip.date %> </li>
  <li>Trip Status: 
  <%= render partial: "shared/status", locals: { member: @trip, style: "badge" }%>
  </li>
  <li>Rating: 
    <% if @trip.rating %>
      <%= @trip.rating %> 
    <% else %>
      <%= link_to "rate this trip", edit_trip_path %>
    <% end %></li>

  <li>Revenue: $<%= @trip.cost %> </li>
  <li>Payment to Driver: $<%= @trip.paid_to_driver %> </li>
  <li>Total Profit: $<%= @trip.profit %> </li>
  <li>Passenger: <%= link_to "#{@trip.passenger.name} (PID: #{@trip.passenger_id}) #{@trip.passenger.is_active ? nil : "(DEACTIVATED)"}", passenger_path(@trip.passenger_id) %> </li>
  <li>Driver: <%= link_to "#{@trip.driver.name} (PID: #{@trip.driver_id}) #{@trip.driver.is_active ? nil : "(DEACTIVATED)"}", driver_path(@trip.driver_id) %>
  </ul>

  <% if !@trip.rating %>
  <div>
  <%= button_to "Rate this trip", edit_trip_path, method: :get, class: "btn btn-primary" %>
</div>
<% end %>

    

  <div>
  <%= button_to "Delete", trip_path(@trip.id), method: :delete, data: {confirm: "Are you sure you want to delete this trip?"}, class: "btn btn-outline-danger" %>
</div>
</div>






</div>